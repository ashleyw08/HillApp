<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_ira_info_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/fragment_bg"
    android:layout_gravity="center"
    tools:context=".IraInfoFragment">


    <!-- Displays pros and cons of Roth Ira vs Traditional Ira-->

    <TextView
        android:id="@+id/iraInfoTextViewId"
        android:layout_width="325dp"
        android:layout_height="195dp"
        android:background="@drawable/fragment_bg"
        android:gravity="center_horizontal"
        android:text="@string/whichIraPara"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/iraInfoBtnId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="@string/infoCloseBtn"
        android:background="@drawable/button_default"
        app:layout_constraintBottom_toBottomOf="@+id/iraInfoTextViewId"
        app:layout_constraintEnd_toEndOf="@+id/iraInfoTextViewId"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/iraInfoTextViewId"
        app:layout_constraintTop_toTopOf="@+id/iraInfoTextViewId"
        app:layout_constraintVertical_bias="0.947" />

</androidx.constraintlayout.widget.ConstraintLayout>